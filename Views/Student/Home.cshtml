@model StudentAccountBLL

<div class="container">
    <h3 class="text-success">Welcome students!</h3>
</div>
<br />

<div class="form-group">
    <label for="uname">User name</label>
    <input type="text" class="form-control" value="" placeholder="Enter username" name="uname">
    <span class="text-danger" asp-validation-for="Username"></span>
</div>
<div class="form-group">
    <label for="Password">Password</label>
    <input type="password" class="form-control" value="" placeholder="Enter password" name="password">
    <span class="text-danger" asp-validation-for="Password"></span>
</div>
<div class="col-md-12 text-center">
    <button type="submit" class="btn btn-success">Login</button>
</div> 